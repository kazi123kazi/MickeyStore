<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="5dp"
     >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mickey Grocery Store"
                android:textSize="35sp"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:background="@color/colorAccent"
                android:id="@+id/text1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/mickeystore"
                android:scaleType="centerCrop"
                android:id="@+id/image"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_centerHorizontal="true"
                android:text='"Where everyone gets something"'
                android:textSize="40sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/text2"
                android:fontFamily="cursive"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_centerHorizontal="true"
                android:text="All type of groceries are available. In addition to
groceries, items like copy, pen, variety of snacks, etc are also available.
One can even get discounts and offers on various products."
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="40dp"
                android:id="@+id/text3"
                android:textColor="@color/colorAccent"
                android:fontFamily="monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/text4"
                android:text="Email : kazisrahi@gmail.com"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:text="Contact Us"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text6"
                android:text="Assam,Karimganj,India"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Address"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="!0 am to 9 pm daily"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>